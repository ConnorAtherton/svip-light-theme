*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-serif
  font-size 16px
  text-shadow 10 0 1px transparent
  border-top 5px solid accent-color
  @media screen and (max-width: 600px)
    font-size 13px

h1, h2, h3, h4, h5, h6
  font-family font-title
  font-weight 900
  a
   text-decoration none

h1
  font-size 2.6em
  letter-spacing -1px
  text-indent -2x

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline
p
  margin-bottom 1.75em
  letter-spacing 0.01rem
  font-size 1.2em
  text-align left
  font-weight 300

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

#main-col
  width 900px
  @media screen and (max-width: 1260px)
    width 100%
    margin-right -300px
  @media screen and (max-width: 900px)
    margin-right 0
    float none
