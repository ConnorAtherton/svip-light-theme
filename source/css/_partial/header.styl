#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  margin-left auto
  margin-right auto
  width 900px
  max-width 95%

  img
    width 75px

  a
    color ##58fb8
    &:hover
      color color-link
      text-decoration none

  #main-nav
    font-family font-title
    line-height 2.5em
    float right
    ul
      list-style none
      li
        float left
        margin-left 30px
    @media screen and (max-width: 600px)
      margin-left -30px